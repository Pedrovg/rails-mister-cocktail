<div class="banner border-bottom border-white" style="background-color: #0E2836">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand btn btn-outline-light" href="/cocktails">The zone</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <form class="form-inline">
        <a class="btn btn-outline-light my-2 my-sm-0" href="/cocktails/new">Add a cocktail</a>
      </form>
      </nav>
      <h1 class="d-flex justify-content-center">Cocktail Zone</h1>
    </div>
<div class="container">
  <div class="row" >
    <% @cocktails.each do |c| %>
      <div class="col-4 cocktail-card" style="width: 70rem; height: 15rem">
        <div class="names"> <%= link_to c.name, c %> </div>
        <%= link_to "Delete", cocktail_path(c), method: :delete, class: "cust-btn" %>
        <img src="https://source.unsplash.com/collection/962396/372x188" alt="cocktail pic">
     </div>
    <% end %>
  </div>
</div>



